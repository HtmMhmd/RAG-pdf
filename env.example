# OpenAI API
OPENAI_API_KEY=sk-...

# Embedding and LLM Models
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-4o-mini

# Local Embedding Model Config (fallback when OpenAI API fails)
USE_LOCAL_EMBEDDINGS=true
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Project configuration
DEFAULT_PROJECT=default
PROJECTS_DIR=projects

# Vector DB Configuration (legacy path)
VECTOR_DB_PATH=data/vector_db

# DVC Configuration
DVC_REMOTE=gdrive://your-folder-id
DVC_AUTO_PUSH=true
DVC_AUTO_PULL=true

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Configuration
MAX_CHUNKS=5
